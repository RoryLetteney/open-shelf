<!DOCTYPE html>
<html lang="en">
<%- include ../../layout/head.ejs %>
<body>
  <%- include ../../layout/header.ejs %>
  <main>
    <h2>Search Results</h2>
    <% results.forEach(book => { %>
      <section class="book">
        <%- include ../books/detail.ejs %>
        <%- include('../books/edit.ejs', { book, action: '/save', method: 'POST', submitName: 'Save Book' }) %>
        <button class="select-book show-details">Select This Book</button>
      </section>
    <% }); %>
  </main>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
</body>
</html>